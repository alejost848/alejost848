{
  "rules": {
    "home": {
      ".read": true,
      "latestTutorials": {
        ".indexOn": "publishedDate"
      },
      "latestWorks": {
        ".indexOn": "publishedDate"
      }
    },
    "tutorials": {
      ".read": true,
      "series": {
        "$sid": {
          "videos": {
            ".indexOn": ["publishedDate", "slug"]
          }
        }
      }
    },
    "users": {
      "list": {
        "$uid": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        }
      }
    },
    "works": {
      ".read": true,
      "list":{        
        ".indexOn": ["publishedDate", "slug"]
      }
    }
  }
}
