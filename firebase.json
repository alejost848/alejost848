{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build/default",
    "rewrites": [{
        "source": "/submitForm",
        "function": "handleFormSubmit"
      },
      {
        "source": "**/!(*.*)",
        "function": "host"
      }
    ],
    "headers": [{
      "source": "**/*.@(jpg|jpeg|gif|png)",
      "headers": [{
        "key": "Cache-Control",
        "value": "max-age=86400"
      }]
    }]
  }
}
